<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersonalCloudDrive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cloud"></i> PersonalCloudDrive
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="page-content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer">
            <div class="container">
                <div class="row g-4 py-4">
                    <div class="col-12 col-md-4 mb-4 mb-md-0">
                        <h5 class="text-white mb-3">
                            <i class="bi bi-cloud"></i> PersonalCloudDrive
                        </h5>
                        <p class="text-white-50 mb-0">
                            Your secure personal cloud storage solution. Upload, manage, and share your files with confidence.
                        </p>
                    </div>
                    <div class="col-6 col-md-4">
                        <h6 class="text-white mb-3">Quick Links</h6>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <a asp-controller="Home" asp-action="Index" class="footer-link">Home</a>
                            </li>
                            <li class="mb-2">
                                <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a>
                            </li>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="mb-2">
                                    <a asp-controller="Dashboard" asp-action="Index" class="footer-link">Dashboard</a>
                                </li>
                            }
                            else
                            {
                                <li class="mb-2">
                                    <a asp-controller="Account" asp-action="Login" class="footer-link">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-6 col-md-4">
                        <h6 class="text-white mb-3">Connect</h6>
                        <div class="social-links">
                            <a href="#" class="me-2 social-link">
                                <i class="fab fa-github"></i>
                            </a>
                            <a href="#" class="me-2 social-link">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="me-2 social-link">
                                <i class="fab fa-linkedin"></i>
                            </a>
                        </div>
                        <p class="text-white-50 mt-3 mb-0">
                            &copy; 2025 PersonalCloudDrive<br/>
                            All rights reserved.
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>